<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="ThemeOverlay.Film.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryDark">@color/warm_blue</item>
    </style>

    <style name="ThemeOverlay.Film.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/carolina_blue</item>
        <item name="colorPrimaryDark">@color/cornflower_blue</item>
    </style>

    <style name="Widget.Film.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:elevation">@dimen/dp_8</item>
    </style>

    <style name="Widget.Film.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Film.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TextAppearance.Film.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Film.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/dp_0</item>
        <item name="strokeColor">@color/color_control_light</item>
        <item name="strokeWidth">@dimen/dp_4</item>
        <item name="cardCornerRadius">@dimen/dp_8</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>